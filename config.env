# YÃ–K Akademik MCP Server - Production Environment Variables

# Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=5000
NODE_ENV=production
PYTHON_ENV=production

# Browser Configuration
HEADLESS_MODE=true
CHROME_BIN=/usr/bin/google-chrome
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver
WEBDRIVER_TIMEOUT=30

# Session Configuration
MAX_CONCURRENT_SESSIONS=10
SESSION_CLEANUP_INTERVAL=3600
SESSION_MAX_AGE=86400

# Scraping Configuration
MAX_PROFILES_PER_SEARCH=100
MAX_COLLABORATORS_PER_PROFILE=500
SCRAPING_DELAY=1
PAGINATION_TIMEOUT=10

# Streaming Configuration
SSE_HEARTBEAT_INTERVAL=15
SSE_MAX_CONNECTIONS=50
SSE_BUFFER_SIZE=8192

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE_PATH=/app/logs/mcp_server.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=5

# Security Configuration
CORS_ENABLED=true
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Storage Configuration
DATA_DIR=/app/public/collaborator-sessions
TEMP_DIR=/tmp/yok_mcp
MAX_STORAGE_SIZE=10GB

# Chrome Options
CHROME_NO_SANDBOX=true
CHROME_DISABLE_DEV_SHM=true
CHROME_DISABLE_GPU=true
CHROME_DISABLE_EXTENSIONS=true
CHROME_DISABLE_IMAGES=true
CHROME_DISABLE_STYLESHEETS=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRY=3

# Performance Configuration
MAX_WORKERS=4
ASYNC_TIMEOUT=300
REQUEST_TIMEOUT=60
CONNECTION_POOL_SIZE=100

# Monitoring Configuration
METRICS_ENABLED=true
TRACING_ENABLED=true
PROMETHEUS_PORT=9090

# Error Handling
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=5
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_BREAKER_TIMEOUT=60
